@model Fazenda

<h2>Criar Fazenda</h2>

<form asp-action="Criar" method="post" class="needs-validation" novalidate>
    <div class="form-group w-50 mb-3">
        <label asp-for="Nome" class="control-label">Nome</label>
        <input asp-for="Nome" class="form-control" required/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Hectares" class="control-label">Tamanho em hectares</label>
        <input asp-for="Hectares" class="form-control" type="number" required/>
        <span asp-validation-for="Hectares" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" required/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Endereco" class="control-label">Endere√ßo</label>
        <input asp-for="Endereco" class="form-control" required/>
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Telefone" class="control-label">Telefone</label>
        <input asp-for="Telefone" class="form-control" type="phone" required/>
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
</form>