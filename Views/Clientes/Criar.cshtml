@model Cliente

<h2>Criar Cliente</h2>

<form asp-action="Criar" method="post" class="needs-validation" novalidate>
    <div class="form-group w-50 mb-3">
        <label asp-for="Nome" class="control-label">Nome</label>
        <input asp-for="Nome" class="form-control" required/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" required/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Endereco" class="control-label">EndereÃ§o</label>
        <input asp-for="Endereco" class="form-control" required/>
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Telefone" class="control-label">Telefone</label>
        <input asp-for="Telefone" class="form-control" type="phone" required/>
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Data_Nascimento" class="control-label">Data de Nascimento</label>
        <input asp-for="Data_Nascimento" class="form-control" type="date"/>
        <span asp-validation-for="Data_Nascimento" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Senha" class="control-label">Senha</label>
        <input asp-for="Senha" class="form-control" type="password" id="Senha" required/>
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label class="control-label">Confirmar senha</label>
        <input id="confirmarSenha" name="confirmarSenha" class="form-control" type="password" required/>
    </div>

    <button type="submit" class="btn btn-primary">Criar</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
</form>