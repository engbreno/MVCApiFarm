@model Fornecedor

<h2>Editar Fornecedor</h2>

<form asp-action="Editar" method="post" class="needs-validation" novalidate>
    <div class="form-group w-50 mb-3">
        <label asp-for="Nome" class="control-label">Nome</label>
        <input asp-for="Nome" class="form-control" required/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Cnpj" class="control-label">CNPJ</label>
        <input asp-for="Cnpj" class="form-control" required/>
        <span asp-validation-for="Cnpj" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Representante" class="control-label">Representante</label>
        <input asp-for="Representante" class="form-control" required/>
        <span asp-validation-for="Representante" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Telefone" class="control-label">Telefone</label>
        <input asp-for="Telefone" class="form-control" type="phone" required/>
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Editar</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
</form>