@model Funcionario

<h2>Editar Funcionario</h2>

<form asp-action="Editar" method="post" class="needs-validation" novalidate>
    <div class="form-group w-50 mb-3">
        <label asp-for="Nome" class="control-label">Nome</label>
        <input asp-for="Nome" class="form-control" required/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="FazendaId" class="control-label">Fazenda</label>
        <select asp-for="FazendaId" class="form-control" asp-items="ViewBag.Fazendas"></select>
        <span asp-validation-for="FazendaId" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Cpf" class="control-label">CPF</label>
        <input asp-for="Cpf" class="form-control" required/>
        <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Telefone" class="control-label">Telefone</label>
        <input asp-for="Telefone" class="form-control" type="phone" required/>
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Funcao" class="control-label">Função</label>
        <input asp-for="Funcao" class="form-control" required/>
        <span asp-validation-for="Funcao" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" required/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Salario" class="control-label">Salario</label>
        <input asp-for="Salario" class="form-control" type="number" required/>
        <span asp-validation-for="Salario" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Editar</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
</form>